<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/background_3"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent" android:layout_height="wrap_content">


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout5"
                android:layout_toLeftOf="@+id/imageView16"
                android:layout_toStartOf="@+id/imageView16">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/imageView17"
                        android:src="@drawable/fajr" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Fajr"
                        android:id="@+id/textView16"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:textColor="#feffffff" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="hh:mm"
                        android:id="@+id/fajrTime"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/sunriseimageView"
                        android:src="@drawable/sunrise" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sunrise"
                        android:id="@+id/sunriseTextView"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="hh:mm"
                        android:id="@+id/sunriseTime"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
					android:layout_gravity="left|top"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/dhuhrImageView"
                        android:src="@drawable/dhuhr" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dhuhr"
                        android:id="@+id/dhuhrTextView"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="hh:mm"
                        android:id="@+id/dhuhrTime"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/asrImageView"
                        android:src="@drawable/asr" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Asr"
                        android:id="@+id/asrTextView"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="hh:mm"
                        android:id="@+id/asrTime"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
					android:layout_gravity="left|top"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/maghribImage"
                        android:src="@drawable/maghrib" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Maghrib"
                        android:id="@+id/maghribTextView"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="hh:mm"
                        android:id="@+id/maghribTime"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/ishaImageView"
                        android:src="@drawable/isha" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Isha"
                        android:id="@+id/ishaTextView"
                        android:layout_weight="3"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="hh:mm"
                        android:id="@+id/ishaTime"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textColor="#feffffff"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_alignParentTop="true"
                android:id="@+id/linearLayout5"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&lt;"
                    android:id="@+id/prev"
                    android:layout_weight="0"
                    android:onClick="prev"
                    android:textColor="#feffffff"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today Date"
                    android:id="@+id/todayDate"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="#feffffff"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:id="@+id/next"
                    android:layout_weight="0"
                    android:onClick="next"
                    android:textColor="#feffffff"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:id="@+id/imageView16"
                android:src="@drawable/qibla_direction"
                android:layout_below="@+id/linearLayout5"
                android:layout_alignRight="@+id/linearLayout5"
                android:layout_alignEnd="@+id/linearLayout5" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>